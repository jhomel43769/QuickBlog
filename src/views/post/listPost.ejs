<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Listado de Posts</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen p-6">

  <div class="max-w-6xl mx-auto">
    <h1 class="text-3xl font-bold mb-8 text-center">Listado de Posts</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% posts.forEach(post => { %>
        <div class="bg-white p-6 rounded-xl shadow hover:shadow-lg transition duration-200">
          <h2 class="text-xl font-semibold mb-2"><%= post.title %></h2>
          <p class="text-sm text-gray-600 mb-3"><%= post.content.substring(0, 100) %>...</p>

          <div class="text-sm text-gray-500 mb-2">
            <span class="block">Categoría: <%= post.category || 'Sin categoría' %></span>
            <span class="block">Publicado: <%= post.published ? "Sí" : "No" %></span>
          </div>

          <div class="flex justify-between items-center mt-4">
            <a href="/view/view/<%= post._id %>" class="text-blue-600 hover:underline text-sm">Ver</a>
            <a href="/view/edit/<%= post._id %>" class="text-yellow-600 hover:underline text-sm">Editar</a>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

</body>
</html>
